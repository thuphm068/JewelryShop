@using JewelryShop.Application.Contracts
@model HomeViewModel
@{
    ViewData["Title"] = "Trang chủ";
    //Layout = null;
}

<!-- Categories Section Begin -->
<section class="categories">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 p-0 col-12">
                <div class="categories__item categories__large__item">
                    <div class="categories__text">
                        <h1>NEW TREND 2023</h1>
                        <p>
                            Khám phá bộ sưu tập khuyên tai của chúng tôi
                        </p>
                        <a href="san-pham/khuyen-bac?sub=Khuyên%20tai">Xem ngay</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 p-0 col-12">
                <div class="categories__item categories__large__item set-bg"
                     data-setbg="/Source/img/categories/category-1.jpg">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->
<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4">
                <div class="section-title">
                    <h4>Nhẫn bạc nổi bật</h4>
                </div>
            </div>
        </div>
        <div class="row property__gallery">
            @for (int i = 0; i < 4; i++)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 col-6 mix women">
                    <div class="product__item">
                        <img src="~/Source/img/product/@Model.NhanBacs.ElementAt(i).Image" alt="">
                        <div class="product__item__text">
                            <h6>
                                <a asp-action="Detail" asp-controller="Product" asp-route-id=@Model.NhanBacs.ElementAt(i).Id>
                                    @Model.NhanBacs.ElementAt(i).Name
                                </a>
                            </h6>
                            <div class="product__price">@Model.NhanBacs.ElementAt(i).FPrice đ</div>
                        </div>

                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!-- Product Section End -->
<!-- Categories Section 2 Begin -->
<section class="categories">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 p-0 col-12">
                <div class="categories__item2 categories__large__item2 set-bg"
                     data-setbg="/Source/img/categories/category-8.jpg">
                    <div class="categories__text">
                        <a href="#"></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-12">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-12 p-0">
                        <div class="categories__item2 set-bg " data-setbg="/Source/img/categories/category-9.jpg">
                            <div class="categories__text">
                                <a href="san-pham/?sub=Nhẫn%20đôi"><h4>Nhẫn đôi</h4></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-12 p-0">
                        <div class="categories__item2 set-bg" data-setbg="/Source/img/categories/category-10.jpg">
                            <div class="categories__text">

                                <a href="/san-pham/?cate=Khuyên%20bạc"><h4>Khuyên bạc</h4></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Categories Section 2 End -->
<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4">
                <div class="section-title">
                    <a><h4>Dây chuyền nổi bật</h4> </a>
                </div>
            </div>
        </div>
        <div class="row property__gallery">
            @for (int i = 0; i < 4; i++)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 col-6 mix women">
                    <div class="product__item">
                        <img src="~/Source/img/product/@Model.DayChuyens.ElementAt(i).Image" alt="/">
                        <div class="product__item__text">

                            <h6><a asp-action="Detail" asp-controller="Product" asp-route-id=@Model.DayChuyens.ElementAt(i).Id>@Model.DayChuyens.ElementAt(i).Name</a></h6>
                            <div class="product__price">@Model.DayChuyens.ElementAt(i).FPrice đ</div>
                        </div>
                    </div>
                </div>
            }

        </div>  
    </div>
</section>
