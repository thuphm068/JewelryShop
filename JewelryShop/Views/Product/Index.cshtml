@using JewelryShop.Application.Contracts
@using JewelryShop.Helper;
@model PaginatedList<ProductHomePageDto>
@{
    ViewData["Title"] = "Home Page";
    //Layout = null;
}


<!-- Shop Section Begin -->
<section class="shop spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3">
                <div class="shop__sidebar">
                    <div class="sidebar__categories">
                        <div class="section-title">
                            <h4>Danh mục</h4>
                        </div>
                        <div class="categories__accordion">
                            <div class="accordion" id="accordionExample">
                                <div class="card">
                                    <div class="card-heading active">
                                        <a data-toggle="collapse" data-target="#collapseOne" asp-action="IndexAsyncNhanBac" asp-controller="Product">Nhẫn bạc</a>
                                    </div>
                                    <div id="collapseOne" class="collapse show" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <ul>
                                                <li><a href="#">Nhẫn nữ</a></li>
                                                <li><a href="#">Nhẫn nam</a></li>
                                                <li><a href="#">Nhẫn đôi (Set)</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseTwo" asp-action="IndexAsyncKhuyenTai" asp-controller="Product">Khuyên tai</a>
                                    </div>
                                    <div id="collapseTwo" class="collapse" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <ul>
                                                <li><a href="#">Khuyên tai</a></li>
                                                <li><a href="#">Khuyên vị trí khác</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseThree">Dây chuyền</a>
                                    </div>
                                    <div id="collapseThree" class="collapse" data-parent="#accordionExample">
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseFour">Vòng tay</a>
                                    </div>
                                    <div id="collapseFour" class="collapse" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <ul>
                                                <li><a href="#">Vòng - Lắc tay</a></li>
                                                <li><a href="#">Vòng - Lắc chân</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="sidebar__sort">
                        <div class="section-title">
                            <h4>Sắp xếp</h4>
                        </div>
                        <div class="sort-box">
                            <select class="sort-values">
                                <option value="asc"><a asp-action="Index" asp-controller="Product" asp-route-sub="" asp-route-sortOrder="">Giá tăng dần</a></option>
                                <option value="desc" href="@Url.Action("Index","Product", new {sub="", sortOrder="price_desc"})">Giá giảm dần</option>
                            </select>
                        </div>

                    </div>
                    <div class="sidebar__filter">
                        <div class="section-title">
                            <h4>Giá</h4>
                        </div>
                        <div class="filter-range-wrap">
                            <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content"
                                 data-min="0" data-max="1000000">
                            </div>
                            <div class="range-slider">
                                <div class="price-input">
                                    <input type="text" id="minamount">
                                    <input type="text" id="maxamount">
                                </div>
                            </div>
                        </div>
                        <a href="#">Lọc</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 col-md-9">
                <div class="row">
 
                    @foreach (var e in Model)
                    {
                        <div class="col-6 col-lg-4 col-md-4">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="/Source/img/product/@e.Image">
                                </div>
                                <div class="product__item__text">
                                    <h6><a asp-action="Detail" asp-controller="Product" asp-route-id="@e.Id">@e.Name</a></h6>

                                    <div class="product__price">@e.Price đ</div>
                                </div>
                            </div>
                        </div>
                        
                    }
                    <div class="col-lg-12 text-center">
                        <div class="pagination__option">
                            <a href="#">1</a>
                            <a href="#">2</a>
                            <a href="#">3</a>
                            <a href="#"><i class="fa fa-angle-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shop Section End -->
