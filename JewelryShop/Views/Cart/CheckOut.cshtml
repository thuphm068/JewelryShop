@{
    ViewData["Title"] = "Thông tin đặt hàng";

}


<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <form action="#" class="checkout__form">
            <div class="row">
                <div class="col-lg-7">
                    <h5>Thông tin đặt hàng</h5>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                            <div class="checkout__form__input">
                                <p>Họ tên <span>*</span></p>
                                <input type="text">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                            <div class="checkout__form__input">
                                <p>Số điện thoại <span>*</span></p>
                                <input type="text">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="checkout__form__input">
                                <p>Tỉnh / Thành phố <span>*</span></p>
                                <input type="text">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                            <div class="checkout__form__input">
                                <p>Quận / Huyện <span>*</span></p>
                                <input type="text" placeholder="Quận / Huyện">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                            <div class="checkout__form__input">
                                <p>Phường / Xã <span>*</span></p>
                                <input type="text" placeholder="Phường / Xã">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="checkout__form__input">
                                <p>Địa chỉ cụ thể <span>*</span></p>
                                <input type="text">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="checkout__form__input">
                                <p>Ghi chú</p>
                                <input type="text"
                                       placeholder="Ghi chú cho đơn hàng">
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="checkout__order">
                        <h5>Đơn hàng</h5>
                        <div class="checkout__order__product">
                            <ul>
                                <li>
                                    <span class="top__text">Sản phẩm</span>
                                    <span class="top__text__right">Tổng cộng</span>
                                </li>
                                <li>Chain buck bag <span>$ 300.0</span></li>
                                <li>Zip-pockets pebbled<br /> tote briefcase <span>$ 170.0</span></li>
                                <li>Black jean <span>$ 170.0</span></li>
                                <li>Cotton shirt <span>$ 110.0</span></li>
                            </ul>
                        </div>
                        <div class="checkout__order__total">
                            <ul>
                                <li>Phí giao hàng <span>$ 750.0</span></li>
                                <li>Tổng cộng <span>$ 750.0</span></li>
                            </ul>
                        </div>
                        <div class="checkout__order__widget">
                            <label for="check-payment">
                                Cheque payment
                                <input type="checkbox" id="check-payment">
                                <span class="checkmark"></span>
                            </label>
                            <label for="paypal">
                                PayPal
                                <input type="checkbox" id="paypal">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                        <button type="submit" class="site-btn">Place oder</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<!-- Checkout Section End -->