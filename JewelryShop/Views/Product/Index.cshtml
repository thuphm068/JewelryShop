                    <div class="sidebar__sort">
                        <div class="section-title">
                            <h4>Sắp xếp</h4>
                        </div>
                        <div class="sort-box">
                            <select class="sort-values" onchange="gotoSection(this.value)">
                                @if (optionselected == "price_asc")
                                {
                                    <option selected value="@Url.Action("Index","Product",new {sortOrder = "price_asc", sub = subselected, cate = cateselected})">Giá tăng dần</option>
                                    <option value="@Url.Action("Index","Product",new {sortOrder = "price_desc", sub = subselected, cate = cateselected})">Giá giảm dần</option>
                                }
                                else
                                {
                                    <option value="@Url.Action("Index","Product",new {sortOrder = "price_asc", sub = subselected, cate = cateselected})">Giá tăng dần</option>
                                    <option selected value="@Url.Action("Index","Product",new {sortOrder = "price_desc", sub = subselected, cate = cateselected})">Giá giảm dần</option>
