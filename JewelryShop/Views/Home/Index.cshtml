<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-12 col-sm-12">
                <div class="section-title">
                    <h4>Nhẫn bạc nổi bật</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="container">

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner col-lg-12">
                @foreach (var e in Model)
                {
                    <div class="carousel-item col-lg-3 col-md-4 col-sm-6 col-6 float-left">
                        <img src="~/Source/img/product/@e.Image" alt="/">
                        <h6><a asp-action="Detail" asp-controller="Product" asp-route-id=@e.Id>@e.Name</a></h6>
                        <div class="product__price">@ViewBag.FormattedPrice đ</div>
                    </div>
                }
            </div>
            <div class="carousel-arrow carousel-arrow--prev carousel-arrow--hint carousel-arrow--hidden" role="button" data-slide="prev"></span>
                <span class="sr-only">Previous</span>
            </div>

            <div class="carousel-arrow carousel-arrow--next carousel-arrow--hint"  role="button" data-slide="next">
                <span class="sr-only">Next</span>
            </div>
        </div>

    </div>

